<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.mopub.mobileads.MoPubView
        android:id="@+id/adsView"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_install_couch"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/img_install_couchgram"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/img_main_ad_couchgram"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txt_install_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Couchgram"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintStart_toEndOf="@+id/img_install_couchgram"
            app:layout_constraintEnd_toStartOf="@+id/btn_install_couchgram"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txt_install_desc"
            app:layout_constraintVertical_chainStyle="spread"/>
        <TextView
            android:id="@+id/txt_install_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6F6F6F"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="@string/couchgram_pr_comment"
            app:layout_constraintStart_toEndOf="@+id/img_install_couchgram"
            app:layout_constraintEnd_toStartOf="@+id/btn_install_couchgram"
            app:layout_constraintTop_toBottomOf="@+id/txt_install_title"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/btn_install_couchgram"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_game_box_ad_mint"
            android:text="@string/install"
            android:clickable="false"
            android:duplicateParentState="true"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/guide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:focusable="false"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:focusableInTouchMode="false"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:minHeight="222dp"
    android:background="@drawable/bg_dialog">
    <RelativeLayout
        android:id="@+id/layout_confirm_title"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_dialog_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/txt_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_confirm_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#313131"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_confirm_title"
        app:layout_constraintBottom_toTopOf="@+id/layout_confirm_btn"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_confirm_btn"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:background="@drawable/dialog_cancel_btn"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialog_confirm"/>
        <Button
            android:id="@+id/dialog_confirm"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:background="@drawable/dialog_confirm_btn"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dialog_cancel"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
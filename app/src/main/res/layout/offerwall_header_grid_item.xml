<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratting="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:paddingTop="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ad_img"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImageScaleType="fitXY"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:progressBarImage="@drawable/img_booster_loading"
        fresco:progressBarImageScaleType="centerInside"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#383838"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_img" />
    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/star_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_title"
        android:layout_marginTop="8dp"
        ratting:srb_starSize="12dp"
        ratting:srb_numberOfStars="5"
        ratting:srb_rating="3"
        ratting:srb_stepSize="0.5"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:soundEffectsEnabled="false"
        ratting:srb_borderColor="@color/transparent"
        ratting:srb_starBackgroundColor="#969696"
        ratting:srb_fillColor="#ffff00"
        ratting:srb_starBorderWidth="1"/>
    <Button
        android:id="@+id/btn_cta"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:clickable="false"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star_point"/>
</android.support.constraint.ConstraintLayout>